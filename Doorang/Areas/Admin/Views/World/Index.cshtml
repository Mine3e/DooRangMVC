﻿@using Core.Models
@model List<World>
@{
    int count = 0;
}
<h1>
    Teams

    <a class="btn btn-primary" asp-action="Create"> Create</a>
</h1>
<div class=" container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/Upload/World/@item.ImageUrl" />
                        </div>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="World" asp-route-id=@item.Id>Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="World" asp-route-id=@item.Id>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>