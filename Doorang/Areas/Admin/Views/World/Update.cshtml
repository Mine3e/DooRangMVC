﻿﻿@using Core.Models
@model World
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div class="mb-3 col-md-3">
                <label asp-for="Title" class="form-label">Name</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>

            <div class="mb-3 col-md-3">
                <label asp-for="ImageFile" class="form-label">ImageUrl</label>
                <input asp-for="ImageFile" class="form-control">
                <span asp-validation-for="ImageFile" style="color:red"></span>
            </div>
        </div>
        <div class="row">

            <div class="mb-3 col-md-9">
                <label asp-for="Subtitle" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Subtitle" rows="3"></textarea>
                <span asp-validation-for="Subtitle" style="color:red"></span>
            </div>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>